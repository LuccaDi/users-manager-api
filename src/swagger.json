{
  "openapi": "3.0.0",
  "info": {
    "title": "Users Manager API Documentation",
    "description": "This is an users management API",
    "version": "1.0.0",
    "contact": {
      "email": "lucca_di@hotmail.com"
    }
  },
  "paths": {
    "/users": {
      "post": {
        "tags": [
          "Users"
        ],
        "summary": "Create a new user",
        "description": "Create a new user receiving the name and email",
        "requestBody": {
          "required": true,
          "description": "Mandatory fields for creating a user",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "Lucca",
                  "email": "lucca@gmail.com"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "example": "a86450b4-5d38-4a17-8519-9f36da2bf27a"
                    },
                    "admin": {
                      "type": "boolean",
                      "example": false
                    },
                    "name": {
                      "type": "string",
                      "example": "Lucca"
                    },
                    "email": {
                      "type": "string",
                      "example": "lucca@gmail.com"
                    },
                    "created_at": {
                      "type": "string",
                      "example": "2022-05-31T21:53:46.067Z"
                    },
                    "updated_at": {
                      "type": "string",
                      "example": "2022-05-31T21:53:46.067Z"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "A user with the specified email already exists",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "This email is already in use!"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": [
          "Users"
        ],
        "summary": "Returns a list of all users",
        "description": "Only `admin` user can access",
        "parameters": [
          {
            "in": "header",
            "name": "user_id",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "admin": {
                        "type": "boolean"
                      },
                      "name": {
                        "type": "string"
                      },
                      "email": {
                        "type": "string"
                      },
                      "created_at": {
                        "type": "string"
                      },
                      "updated_at": {
                        "type": "string"
                      }
                    }
                  },
                  "example": [
                    {
                      "id": "a86450b4-5d38-4a17-8519-9f36da2bf27a",
                      "admin": true,
                      "name": "Lucca",
                      "email": "lucca@gmail.com",
                      "created_at": "2022-05-31T21:53:46.067Z",
                      "updated_at": "2022-05-31T21:53:46.067Z"
                    },
                    {
                      "id": "514fbed0-0082-4150-8949-447063a8c4b0",
                      "admin": false,
                      "name": "Jo√£o Pedro",
                      "email": "joao_pedro@gmail.com",
                      "created_at": "2022-05-31T22:39:54.952Z",
                      "updated_at": "2022-05-31T22:39:54.952Z"
                    }
                  ]
                }
              }
            }
          },
          "400": {
            "description": "User not found or User without permission",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "You need to be an administrator to list all users."
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/{user_id}": {
      "get": {
        "tags": [
          "Users"
        ],
        "summary": "Returns a specific user",
        "parameters": [
          {
            "in": "path",
            "name": "user_id",
            "required": true,
            "description": "User ID",
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "admin": {
                        "type": "boolean"
                      },
                      "name": {
                        "type": "string"
                      },
                      "email": {
                        "type": "string"
                      },
                      "created_at": {
                        "type": "string"
                      },
                      "updated_at": {
                        "type": "string"
                      }
                    }
                  },
                  "example": {
                    "id": "514fbed0-0082-4150-8949-447063a8c4b0",
                    "admin": false,
                    "name": "Lucca",
                    "email": "lucca@gmail.com",
                    "created_at": "2022-05-31T21:53:46.067Z",
                    "updated_at": "2022-05-31T21:53:46.067Z"
                  }
                }
              }
            }
          },
          "404": {
            "description": "User not found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "User not found."
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/{user_id}/admin": {
      "patch": {
        "tags": [
          "Users"
        ],
        "summary": "Turns a user an admin",
        "parameters": [
          {
            "in": "path",
            "name": "user_id",
            "required": true,
            "description": "User ID",
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "admin": {
                        "type": "boolean"
                      },
                      "name": {
                        "type": "string"
                      },
                      "email": {
                        "type": "string"
                      },
                      "created_at": {
                        "type": "string"
                      },
                      "updated_at": {
                        "type": "string"
                      }
                    }
                  },
                  "example": {
                    "id": "a86450b4-5d38-4a17-8519-9f36da2bf27a",
                    "admin": true,
                    "name": "Lucca",
                    "email": "lucca@gmail.com",
                    "created_at": "2022-05-31T21:53:46.067Z",
                    "updated_at": "2022-05-31T21:53:46.067Z"
                  }
                }
              }
            }
          },
          "404": {
            "description": "User not found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "User not found."
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}